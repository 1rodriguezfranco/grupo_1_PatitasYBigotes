<!DOCTYPE html>
<html lang="en">

    <%- include("./partials/head") %> 
    
<body>
  
    <%- include("./partials/header") %>

    <main>
        <section class="productosPorImagen">
            <h3>Productos para cada mascota</h3>
            <article class="mascotas">
                <div class="perro"> 
                    <a href="/products/perro"><img src="images/perro.jpg" alt="Perro"></a>
                </div>

                <div class="gato"> 
                    <a href="/products/gato"><img src="images/gato.jpg" alt="Gato"></a>
                </div>

                <div class="roedor"> 
                    <a href="/products/roedor"><img src="images/roedor.jpg" alt="Roedor"></a>
                </div>

                <div class="ave"> 
                    <a href="/products/ave"><img src="images/ave.jpg" alt="Ave"></a>
                </div>
            </article>
        </section>

        <section class="marcasDestacadas">
            <h3>Marcas destacadas</h3>
            <article class="marcas">
                <div class="marca">
                    <a href="/products/brands/1"><h2>Marca 1</h2></a>
                </div>
                <div class="marca">
                    <a href="/products/brands/2"><h2>Marca 2</h2></a>
                </div>
                <div class="marca">
                    <a href="/products/brands/4"><h2>Marca 4</h2></a>
                </div>
                <div class="marca">
                    <a href="/products/brands/5"><h2>Marca 5</h2></a>
                </div>
                <div class="marca">
                    <a href="/products/brands/7"><h2>Marca 7</h2></a>
                </div>
                <div class="marca">
                    <a href="/products/brands/9"><h2>Marca 9</h2></a>
                </div>
            </article>
        </section>

        <section class="productosPreferidos">
            <h3>Nuestros productos</h3>
            <article class="productos">
            <% for(let product of products) { %>
                
                    <div class="producto"> 
                        <a href="/products/details/<%= product.id %>" class="imagen"><img style="width: 100%;" src="/images/products/<%= product.image %>"></a>
                        <p class="nombre"><%= product.name %></p>
                        <p class="descripcion"><%= product.description %></p>
                        <p class="precio">$ <%= product.final_price %></p>
                    </div>
                    
            <% } %>
            </article>
        </section>
    </main>

    <%- include("./partials/footer") %>

</body>
</html>