<!DOCTYPE html>
<html lang="en">

    <%- include("./partials/head") %> 
    
<body>
    <body>

        <%- include("./partials/header") %>

        <main>

            <section class="listadoProductos">
                <% for(let product of products) { %>
                    <article class="productos">
                        <div class="producto"> 
                            <a href="/productdetails/<%= product.id %>" class="imagen"><img src="images/products/<%= product.product_image %>"></a>
                            <p class="nombre"><%= product.name %></p>
                            <p class="descripcion"><%= product.description %></p>
                            <p class="precio">$ <%= product.finalPrice %></p>
                            <a href="#" class="agregar"><div class="agregarCarrito">Agregar al carrito</div></a>
                            <a href="#" class="compra"><div class="comprar">Comprar</div></a>
                        </div>
                    </article>
                <% } %>
            </section>
            
        </main>

        <%- include("./partials/footer") %>

    </body>
</body>
</html>