<!DOCTYPE html>
<html lang="en">

  <%- include("./partials/head") %> 
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<body>

    <%- include("./partials/header") %>

<div class="container-create-edit-product">
    <div class="row display-flex justify-content-center mt-2 mb-5">
        <div class="col-lg-5 col-md-8 col-xs-12 col-sm-12">
            <h1 class="mb-3 text-center">Nuevo Producto</h1>
            <form action="/admin/createproduct" method="post" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="name">Nombre del Producto</label>
                  <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="form-group">
                    <label for="description">Descripcion</label>
                    <textarea class="form-control" id="description" name="description"></textarea>
                  </div>
                <div class="form-group">
                    <label for="file" class="form-label">Imagen de producto</label>
                    <input class="form-control" type="file" id="file" name="product_image">
                </div>
                <div class="form-group">
                  <label for="mascota">Seleccione la mascota</label>
                  <select class="form-control" id="mascota" name="mascota">
                    <option value="">Select</option>
                    <option value="perro">Perro</option>
                    <option value="gato">Gato</option>
                    <option value="roedor">Roedor</option>
                    <option value="aves">Aves</option>
                  </select>
                </div>
                <div class="form-group">
                    <label for="categoria">Seleccione la categoria</label>
                    <select class="form-control" id="categoria" name="categoria">
                      <option value="">Select</option>
                      <option value="alimentos">Alimentos</option>
                      <option value="accesorios">Accesorios</option>
                      <option value="estetica">Est√©tica e higiene</option>
                      <option value="salud">Salud</option>
                    </select>
                  </div>
                <div class="form-group">
                    <label for="price">Precio del producto</label>
                    <input type="text" class="form-control" id="price" name="price" placeholder="$">
                </div>
                <div class="form-group">
                    <label for="discount">Descuento aplicado (%)</label>
                    <input type=text class="form-control" id="discount" name="discount" placeholder="%">
                </div>
            <div class="container my-3">
                <div class="col-md-12 text-center">
                    <button type="reset" class="btn btn-primary btn-lg">Reset</button>
                    <button type="submit" class="btn btn-secondary btn-lg">Guardar</button>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include("./partials/footer") %>
</body>
</html>

