<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head") %> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

<body>

    <%- include("../partials/header") %>  

    <div class="container-register">
        <div class="row display-flex justify-content-center mt-2 mb-5">
            <div class="col-lg-5 col-md-8 col-xs-12 col-sm-12">
                <div id="buttons">
                    <h1 class="mb-3 text-center">Registro</h1>
                </div>
                <form action="/auth/register" id="register-form" method="post" enctype="multipart/form-data"> 
                    <!-- el atributo "enctype= multipart/form..." es necesario para que multer funcione-->
                    <div class="form-group">
                      <label for="Nombre">Nombres</label>
                      <input type="text" id="first_name" name="first_name" class="form-control <%= locals.errors && errors.first_name ? 'is-invalid' : null %>" value= "<%= locals.oldData && oldData.first_name ? oldData.first_name : null %>">
                      <small class="error-msg"></small>
                      <% if (locals.errors && errors.first_name) { %>
                        <p class="text-danger"><%= errors.first_name.msg %></p>
                      <% } %>
                    </div>

                    <div class="form-group">
                        <label for="last_name">Apellidos</label>
                        <input type="text" id="last_name" name="last_name" class="form-control <%= locals.errors && errors.last_name ? 'is-invalid' : null %>" value= "<%= locals.oldData && oldData.last_name ? oldData.last_name : null %>">
                        <small class="error-msg"></small>
                        <% if (locals.errors && errors.last_name) { %>
                          <p class="text-danger"><%= errors.last_name.msg %></p>
                        <% } %>
                      </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null %>" value= "<%= locals.oldData && oldData.email ? oldData.email : null %>">
                        <small class="error-msg"></small>
                        <% if (locals.errors && errors.email) { %>
                            <p class="text-danger"><%= errors.email.msg %></p>
                        <% } %>
                      </div>
                    <div class="form-group">
                        <label for="password">Contraseña</label>
                        <input type="password" id="password" name="password" class="form-control <%= locals.errors && errors.password ? 'is-invalid' : null %>">
                        <small class="error-msg"></small>
                        <% if (locals.errors && errors.password) { %>
                            <p class="text-danger"><%= errors.password.msg %></p>
                        <% } %>
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirma tu contraseña</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control <%= locals.errors && errors.confirmPassword ? 'is-invalid' : null %>">
                        <small class="error-msg"></small>
                        <% if (locals.errors && errors.confirmPassword) { %>
                            <p class="text-danger"><%= errors.confirmPassword.msg %></p>
                        <% } %>
                    </div>
                    <div class="form-group">
                        <label for="avatar" class="form-label">Carga una foto</label>
                        <input type="file" id="avatar" name="avatar" class="form-control <%= locals.errors && errors.avatar ? 'is-invalid' : null %>">
                        <small class="error-msg"></small>
                        <% if(locals.errors && errors.avatar) { %>
                            <p class="text-danger"><%= errors.avatar.msg %></p>
                        <% } %>    
                    </div>
                    <div class="container my-3">
                        <div class="col-md-12 text-center">
                            <button type="submit" class="btn btn-primary btn-lg register-button" id="submitBtn">Registrarme</button>
                            <button type="reset" class="btn btn-secondary btn-lg">Borrar</button>
                        </div>
                    </div>
                </form>
                <div class="form-group text-center">
                    <button class="button-register3" type="button">Ingresar con Gmail</button>
                </div>
                <div class="form-group mt-1 mb-1 text-center">
                    <button class="button-register2" type="button">Ingresar con Facebook</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/validations/register.js"></script>

    <%- include("../partials/footer") %>

<body>
</html>